rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to comments collection
    match /comments/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to stats collection for comment statistics
    match /stats/{document} {
      allow read, write: if true;
    }
  }
}
